<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>AIInterviewAssistant.WPF</RootNamespace>
    <AssemblyName>AIInterviewAssistant.WPF</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="GigaChatAdapter" Version="1.0.4" />
    <PackageReference Include="NAudio" Version="2.2.1" />
    <PackageReference Include="SharpHook" Version="5.2.2" />
    <PackageReference Include="SharpHook.Reactive" Version="5.2.2" />
    <PackageReference Include="System.Drawing.Common" Version="8.0.0" />
    <PackageReference Include="Vosk" Version="0.3.38" />
  </ItemGroup>

</Project>